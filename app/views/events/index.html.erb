<h1><%= pluralize(@events.size, 'Event') %></h1>


<% @events.each do |e| %>
  <article>
    <header>
      <h2><%= e.name %></h2>
    </header>
    <p>
      <%= truncate(e.description, length: 35, seperator: ' ') %>
    </p>
    <table>
      <tr>
        <th>When:</th>
        <td><%= e.starts_at %></td>
      </tr>
      <tr>
        <th>Where:</th>
        <td><%= e.location %></td>
      </tr>
      <tr>
        <th>Price:</th>
        <td><%= format_price(e) %></td>
      </tr>
    </table>
  </article>
<% end %>
